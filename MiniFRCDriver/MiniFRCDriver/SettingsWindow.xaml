<Window x:Name="settingsWindow" x:Class="MiniFRCDriver.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniFRCDriver"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800" ResizeMode="CanMinimize" Closing="Window_Closing">
    <Grid Background="#FF383838">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="#FF5B5B5B" BorderThickness="1" HorizontalAlignment="Left" Height="399" Margin="10,10,0,0" VerticalAlignment="Top" Width="376">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Border BorderBrush="#FF5B5B5B" BorderThickness="1" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="354" Background="#FF646464" Margin="10,10,0,0">
                    <Label Content="Settings" Margin="0,-4,19,-4" Foreground="#FFB9B9B9"/>
                </Border>
                <TextBox x:Name="settingsBox" HorizontalAlignment="Left" Height="327" Margin="10,35,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="354" Background="#FF646464" BorderBrush="#FF5B5B5B" Foreground="#FFB9B9B9" AcceptsReturn="True"/>
                <Button x:Name="saveSetButton" Content="Save" HorizontalAlignment="Left" Margin="10,367,0,0" VerticalAlignment="Top" Width="167" Height="20" Background="#FF646464" BorderBrush="#FF5B5B5B" Foreground="#FFB9B9B9" Click="saveSetButton_Click"/>
                <Button x:Name="loadSsetButton" Content="Load" HorizontalAlignment="Left" VerticalAlignment="Top" Width="167" Margin="197,367,0,0" Foreground="#FFB9B9B9" BorderBrush="#FF5B5B5B" Background="#FF646464" Click="loadSsetButton_Click"/>
            </Grid>
        </Border>
        <Border BorderBrush="#FF5B5B5B" BorderThickness="1" HorizontalAlignment="Left" Height="399" Margin="406,10,0,0" VerticalAlignment="Top" Width="376">
            <Grid>
                <Border BorderBrush="#FF5B5B5B" BorderThickness="1" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="354" Background="#FF646464" Margin="10,10,0,0">
                    <Label Content="Autonomous" Margin="0,-4,19,-4" Foreground="#FFB9B9B9"/>
                </Border>
                <TextBox x:Name="autoBox" HorizontalAlignment="Left" Height="327" Margin="10,35,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="354" Background="#FF646464" BorderBrush="#FF5B5B5B" Foreground="#FFB9B9B9" AcceptsReturn="True"/>
                <Button x:Name="saveAutoButton" Content="Save" HorizontalAlignment="Left" Margin="10,367,0,0" VerticalAlignment="Top" Width="167" Height="20" Background="#FF646464" BorderBrush="#FF5B5B5B" Foreground="#FFB9B9B9" Click="saveAutoButton_Click"/>
                <Button x:Name="loadAutoButton" Content="Load" HorizontalAlignment="Left" VerticalAlignment="Top" Width="167" Margin="197,367,0,0" Foreground="#FFB9B9B9" BorderBrush="#FF5B5B5B" Background="#FF646464" Click="loadAutoButton_Click"/>
            </Grid>
        </Border>

    </Grid>
</Window>
